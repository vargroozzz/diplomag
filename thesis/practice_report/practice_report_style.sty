\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{practice_report_style}[
  2024/05/12 v1.0 Practice Report Style
]

% Required packages for XeLaTeX
\RequirePackage{fontspec}
\RequirePackage[ukrainian,english]{babel}
\RequirePackage{csquotes}
\RequirePackage{geometry}
\RequirePackage{setspace}
\RequirePackage{hyperref}
\RequirePackage{amsmath}
\RequirePackage{graphicx}

% --- Page Layout ---
\geometry{
  a4paper,
  left=25mm,
  right=20mm,
  top=20mm,
  bottom=20mm
}

% --- Font Settings (Using fontspec) ---
\setmainfont{Times New Roman}[Ligatures=TeX]
\setsansfont{Arial}[Ligatures=TeX]
\setmonofont{Courier New}[Ligatures=TeX]

% --- Line Spacing ---
\onehalfspacing

% --- Paragraph Settings ---
\setlength{\parindent}{1.25cm}
\setlength{\parskip}{0pt}

% --- Page Numbering Style ---
\pagestyle{plain}

% --- Hyperref Setup ---
\hypersetup{
    colorlinks=true,
    linkcolor=black,
    citecolor=black,
    urlcolor=blue,
    bookmarks=true,
    bookmarksopen=true,
    pdfpagemode=UseOutlines
}

% --- Language Specific Settings ---
\addto\captionsukrainian{
  \renewcommand{\bibname}{Список використаних джерел}
  \renewcommand{\contentsname}{Зміст}
  \renewcommand{\abstractname}{Анотація} % For abstract if needed
}

\AtBeginDocument{
  \selectlanguage{ukrainian}
}

\endinput 